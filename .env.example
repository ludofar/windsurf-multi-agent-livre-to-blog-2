# Configuration de l'API OpenRouter (obligatoire)
# Obtenez votre clé sur https://openrouter.ai/keys
OPENROUTER_API_KEY=votre_cle_api_ici

# Modèle par défaut (Qwen)
# Options disponibles: qwen/qwen3-coder, gpt-3.5-turbo, gpt-4, etc.
DEFAULT_MODEL=qwen/qwen3-coder

# Paramètres de génération
MAX_TOKENS=4000          # Nombre maximum de tokens par réponse
TEMPERATURE=0.7          # Niveau de créativité (0.0 à 1.0)
TOP_P=0.9                # Contrôle de la diversité (0.0 à 1.0)
MAX_RETRIES=3            # Nombre de tentatives en cas d'échec
REQUEST_TIMEOUT=60       # Délai d'expiration des requêtes (secondes)

# Paramètres de cache
CACHE_ENABLED=true       # Activer/désactiver le cache
CACHE_TTL=86400          # Durée de vie du cache en secondes (24h)
CACHE_DIR=./.cache       # Dossier de stockage du cache

# Paramètres de sortie
OUTPUT_DIR=./output      # Dossier de sortie des articles générés
LOG_LEVEL=INFO           # Niveau de journalisation (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FILE=app.log         # Fichier de log (laisser vide pour la sortie console uniquement)

# Paramètres de performance
MAX_CONCURRENT_REQUESTS=5  # Nombre maximum de requêtes simultanées
REQUEST_DELAY=1.0        # Délai minimum entre les requêtes (secondes)

# Configuration avancée
ANALYZE_CHUNK_SIZE=10000  # Taille des blocs d'analyse (caractères)
MAX_INPUT_LENGTH=100000   # Longueur maximale d'entrée (caractères)

# Paramètres de débogage
DEBUG_MODE=false         # Activer le mode débogage (plus de logs)
DRY_RUN=false           # Mode test (pas d'appels API réels)
